<div class="sticky">
  <div class="flex header">
    <img class="user-picture" src="{{currentUser.picture}}" alt="" />
    <p id="username">{{currentUser.username}}</p>
    <a href="/edit"><img src="./../images/reglage.png" alt="" /></a>
  </div>
</div>
<div class="allfriends-div">
  <a class="allfriends" href="/users/friends">all friends</a>
</div>

<div class="friends">
  <form action="/users/search" method="GET">

    <input type="search" name="username" placeholder="Search ..." id="search" />
    <button>🔍</button>

  </form>
  <div class="friends-list">
    {{#if foundUser}}
      <img src={{foundUser.picture}} alt="" />
      <p>{{foundUser.username}}</p>
      <form
        action="/users/{{foundUser._id}}/add"
        method="post"
        class="add-friend"
      >
        <button><img src="./../images/plus.png" alt="" /></button>
      </form>
    {{/if}}
  </div>
</div>

